<section class="container" aria-labelledby="login-heading">
  <div class="card" style="max-width:480px;margin:4rem auto;">
    <h1 id="login-heading">Welcome back</h1>
    <p>Log in to continue to your workspace.</p>
    <form id="login-form" novalidate>
      <label>
        Email address
        <input type="email" name="email" required autocomplete="email" placeholder="you@company.com">
        <span class="inline-error" data-error="email"></span>
      </label>
      <label>
        Password
        <input type="password" name="password" required autocomplete="current-password" placeholder="••••••••">
        <span class="inline-error" data-error="password"></span>
      </label>
      <button type="submit" class="button">Login</button>
      <p>Need an account? <a href="/auth/signup" data-link>Sign up</a>.</p>
    </form>
  </div>
</section>
