
    <div class="layout">
      <main id="app" class="layout-main">
        <div class="container">
          <!-- Header Section -->
          <section class="dashboard-header">
            <h1 class="dashboard-title">Welcome back, <span id="user-email"></span>!</h1>
            <p class="dashboard-text">
              View the health of your support pipeline at a glance. Stay ahead of the queue and keep
              your customers delighted.
            </p>
            <div class="dashboard-actions">
              <button class="button button-primary" onclick="location.href='/tickets'">
                Manage tickets
              </button>
              <button class="button button-secondary" onclick="location.href='/tickets'">
                View all tickets
              </button>
            </div>
          </section>

          <!-- Metrics Section -->
          <section class="card-grid" id="dashboard-metrics">
            <div class="card">
              <span class="metric-label">Total tickets</span>
              <div class="metric-value" id="metric-total" data-stat="total">0</div>
              <p class="metric-description">All requests currently tracked in the workspace.</p>
            </div>

            <div class="card">
              <span class="metric-label">Open</span>
              <div class="metric-value" id="metric-open" data-stat="open">0</div>
              <p class="metric-description">Tickets awaiting an initial response or action.</p>
            </div>

            <div class="card">
              <span class="metric-label">Resolved</span>
              <div class="metric-value" id="metric-resolved" data-stat="resolved">0</div>
              <p class="metric-description">Tickets marked as closed by the team.</p>
            </div>
          </section>
        </div>
      </main>
    </div>





